import unittest 
from decimal import Decimal

class test_budgetTracking(unittest.TestCase):

	def test_spending(self):
		tracker = budget(Decimal('100'))
		tracker.usePlan(Decimal('25'))
		tracker.useOther(Decimal('15'))
		self.assertEqual(tracker.balance, Decimal('75'))
		self.assertEqual(totalSpent(), Decimal('40'))

if __name__ == "__main__":
    unittest.main()
